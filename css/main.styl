yellow = #d5c303 !important

body
	background #fff
	color color-text
	font-family font-family

.cookies
	padding-top 5px
	min-height 55px
	background #fff
	
.btn-cookies
		background #6c6c6c !important
		border 1px solid #6c6c6c !important
		color #fff !important
		font-weight bold
		margin-top 10px
		
.btn-cookies:hover
		background #8f8f8f !important	
			
.text-cookies		
	padding-top 15px
	width 52% !important
	
.navbar	
	background #f5f5f5 !important
	a
		color navbar-color
	a:hover
		text-decoration underline !important
		color yellow 
		background none !important
		

.navbar-brand	
	padding-top 0px !important
	
.navbar-center	
	margin-left 30% !important	
	
.navbar-right	
	line-height 50px
	font-weight bold
	a
		color yellow
		

.search
	margin-top -20px
	background url(../img/search-baner.jpg)	
	width 100%
	min-height 155px	
	background-position 20% 45%
	
.search-input
	padding-top 5%
	
.about
	min-height 380px
	h2
		color yellow 
		font-size 48px
		font-weight bold
		padding-bottom 3%
	
.about-text
	font-size 18px
	text-align justify	
	vertical-align middle
		
.info
	background url(../img/info.jpg)	
	background-size 100%
	width 100%
	min-height 600px	
	color #fff
	h3
		font-size 36px
