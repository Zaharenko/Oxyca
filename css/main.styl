		font-size 18px
		
	.info-text
		margin-top 8%
		
.help
	background #f5f5f5	
	min-height 560px
	h2
		color color-text
		font-size 48px
		font-weight bold
		padding-bottom 3%
		
.questions, .support
	width 50%
	h3
		text-align center
	
.questions
	margin-left 50%	
		
		
.slider
	min-height 360px
	font-weight bold
	h2
		font-size 60px		
		color yellow
	span
		color 	color-text
		
.fa-angle-left
	position absolute
	left 5px
	top 10px
	z-index 99999
	cursor pointer
	
.fa-angle-left:hover
	color yellow	
	
.fa-angle-right
	position absolute
	right 5px
	top 10px	
	z-index 99999	
	cursor pointer
	
.fa-angle-right:hover
	color yellow		

		

.join
	background url(../img/map.jpg)	
	min-height 310px

